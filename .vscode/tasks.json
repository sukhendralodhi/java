{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Java",
            "type": "shell",
            "command": "javac",
            "args": [
                "chapter1/helloworld.java"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$javac"]
        },
        {
            "label": "Run Java",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp",
                "chapter1",
                "HelloWorld"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": ["Build Java"]
        }
    ]
}
